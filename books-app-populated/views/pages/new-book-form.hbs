<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Nuevo libro</h1>
            <hr>

            <form action="/libros/crear" method="POST">
                <div class="form-group">
                    <label for="title">Título</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="form-group">
                    <label for="desc">Descripción</label>
                    <input type="text" class="form-control" id="desc" name="description">
                </div>
                <div class="form-group">
                    <label for="auth">Autor/a</label>
                    <input type="text" class="form-control" id="auth" name="author">
                </div>
                <div class="form-group">
                    <label for="rate">Puntuación</label>
                    <input type="text" class="form-control" id="rate" name="rating">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Crear libro</button>
            </form>

        </div>
    </div>
</div>